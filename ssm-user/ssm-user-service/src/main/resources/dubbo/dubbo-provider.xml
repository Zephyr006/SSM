<?xml version="1.0" encoding="UTF-8"?>
<beans xmlns="http://www.springframework.org/schema/beans"
       xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance"
       xmlns:dubbo="http://code.alibabatech.com/schema/dubbo"
       xsi:schemaLocation="http://www.springframework.org/schema/beans
       http://www.springframework.org/schema/beans/spring-beans-4.3.xsd
       http://code.alibabatech.com/schema/dubbo
       http://code.alibabatech.com/schema/dubbo/dubbo.xsd">
    <!--<dubbo:annotation />-->
    <!--<bean id="propertyConfigurer" class="org.springframework.beans.factory.config.PropertyPlaceholderConfigurer">
        <property name="location" value="classpath:conf/dubbo.properties"/>
        <property name="fileEncoding" value="utf-8"/>
    </bean>-->

    <!-- 提供方应用信息，用于计算依赖关系 -->
    <dubbo:application name="ssm-user-service"/>
    <!-- 使用zookeeper注册中心暴露服务地址 -->
    <dubbo:registry address="zookeeper://39.105.152.65:2181" client="zkclient" protocol="zookeeper"
                file="./ssm-parent/output/dubbo.cache"/>
    <!-- 用dubbo协议在20880端口暴露服务 -->
    <dubbo:protocol name="dubbo" port="20880"/>


    <!-- 声明需要暴露的服务接口 -->
    <dubbo:service interface="cn.ssm.user.api.service.IUserService" ref="userService" version="1.0" retries="1"/>

    <!-- 和本地bean一样实现服务, 重要：在service的实现类上必须加上类似@Service("userService")的注解，否则服务找不到实现类 -->
    <!--<bean id="userService" class="cn.ssm.user.service.impl.AccountServiceImplmpl"/>-->
</beans>